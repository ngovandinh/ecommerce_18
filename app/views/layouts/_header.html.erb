<div id="top">
  <div class="container">
    <div class="col-md-6 offer" data-animate="fadeInDown">
      <a href="#" class="btn btn-success btn-sm" data-animate-hover="shake">
        <%= t "offer" %></a>
      <a href="#"><%= t "orders_off" %></a>
    </div>
    <div class="col-md-6" data-animate="fadeInDown">
      <ul class="menu">
        <% if logged_in? %>
          <li><%= link_to t("profile"), current_user %></li>
          <li><%= link_to t("setting"), edit_user_path(current_user) %></li>
          <li><%= link_to t("logout"), session_path(current_user),
            method: :delete %></li>
        <% else %>
          <li><a href="#" data-toggle="modal" data-target="#login-modal">
            <%= t "login" %></a></li>
          <li><%= link_to t("register"), new_user_path, method: :get %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="modal fade" id="login-modal" tabindex="-1"
    role="dialog" aria-labelledby="Login" aria-hidden="true">
    <div class="modal-dialog modal-sm">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"
            aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="Login"><%= t "login" %></h4>
        </div>
        <div class="modal-body">
        <%= form_for(:session, url: sessions_path) do |f| %>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control",
              placeholder: "email" %>
          </div>
          <div class="form-group">
            <%= f.label :password %>
            <%= link_to t("forget_password"), "#" %>
            <%= f.password_field :password, class: "form-control",
              placeholder: "password" %>
          </div>
          <div class="form-group">
            <%= f.submit t("login"), class: "btn btn-primary" %>
          </div>
        <% end %>
        <p class="text-center text-muted"><%= t "not_registered" %></p>
        <p class="text-center text-muted"><%= link_to t("register"), new_user_path %>
          </a><%= t "easy_access_comment" %></p>
        </div>
      </div>
    </div>
  </div>
</div>
